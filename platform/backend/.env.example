# Server Configuration
PORT=4000
NODE_ENV=development

# n8n Configuration
N8N_WEBHOOK_URL=http://ark-n8n.default.127.0.0.1.nip.io:8080/webhook/migration
N8N_API_URL=http://ark-n8n.default.127.0.0.1.nip.io:8080/api/v1

# ARK Configuration
ARK_API_URL=http://ark-api.default.svc.cluster.local:80
ARK_NAMESPACE=banque-migration

# Database Configuration (PostgreSQL)
DATABASE_URL=postgresql://banque:password@localhost:5432/migrations

# Redis Configuration (for WebSocket scaling)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# File Storage
WORKSPACE_DIR=./workspace
OUTPUT_DIR=./outputs

# CORS
FRONTEND_URL=http://localhost:3000

# Security
JWT_SECRET=your-secret-key-change-in-production
API_RATE_LIMIT=100

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/backend.log
